              <div class="input-group-prepend">
                <div class="input-group-text">Confirm this is the segment:</div>
              </div>
              <input type="text" class="form-control" id="confirmStravaSeg" name="segment" readonly>
              
            </div><br>
            <div id="continueButton">
              <button id="continue" class="btn btn-primary btn-block"type="button" name="button">Submit Segment</button>
            </div>
            <div id="submitButton">
              <button id="submit" class="btn btn-primary btn-block"type="submit" name="button">Confirm</button>
            </div>
